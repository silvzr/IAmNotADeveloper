<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurazione Spoofer di Versione"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questa configurazione sarÃ  applicata a tutte le app selezionate nel manager Xposed"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version Name (formato: X.Y.ZZ.AAA)"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/versionNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="es. 9.0.33.782"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version Code (esattamente 9 cifre)"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/versionCodeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="es. 123456789"
        android:inputType="number"
        android:layout_marginBottom="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:padding="8dp"/>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: assicurati di aver selezionato le app target nel manager Xposed e di aver riavviato le app dopo aver modificato la configurazione."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
