<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurazione Spoofer di Versione"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questa configurazione sarÃ  applicata a tutte le app selezionate nel manager Xposed"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modulo attivo"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>

        <Switch
            android:id="@+id/moduleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version Name"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/versionNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="es. 2.0.0"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version Code"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/versionCodeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="es. 200"
        android:inputType="number"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salva Configurazione"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: assicurati di aver selezionato le app target nel manager Xposed e di aver riavviato le app dopo aver modificato la configurazione."
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:gravity="center"/>

</LinearLayout>
